<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#5E5E5E"
              android:orientation="horizontal">

    <ImageButton
        android:id="@+id/id_bottom_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/ic_recommend"/>

    <ImageButton
        android:id="@+id/id_bottom_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/ic_rank"/>

    <ImageButton
        android:id="@+id/id_bottom_software"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/ic_software"/>

    <ImageButton
        android:id="@+id/id_bottom_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/ic_search"/>

</LinearLayout>
